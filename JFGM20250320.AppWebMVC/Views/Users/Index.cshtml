@model IEnumerable<JFGM20250320.AppWebMVC.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center">Lista de usuarios</h1>
    </div>

    <div class="card-body">


        <table class="table table-striped" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th class="text-end">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td class="text-end">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.UserId"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.UserId"><i class="bi bi-card-text"></i></a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.UserId"><i class="bi bi-archive"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white">
        <p>
            <a asp-action="Create" class="btn btn-outline-success">Crear nuevo Usuario</a>
        </p>
    </div>

</div>


@section Scripts {
    <script>
               $(document).ready(function() {
             $('#myTable').DataTable({
               "language":languageTable
             });
        });

    </script>
}
