@model IEnumerable<JFGM20250320.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<div class="card">

    <div class="card-header bg-white">

        <h1 class="text-center">Lista de Marcas</h1>
    </div>

    <div class="card-body">

        <p>
            <a class="btn btn-outline-success" asp-action="Create">Crear nueva marca</a>
        </p>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BrandName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrandName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.BrandId"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.BrandId"><i class="bi bi-card-text"></i></a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.BrandId"><i class="bi bi-archive"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

@section Scripts {
    <script>
               $(document).ready(function() {
             $('#myTable').DataTable({
               "language":languageTable
             });
        });

    </script>
}