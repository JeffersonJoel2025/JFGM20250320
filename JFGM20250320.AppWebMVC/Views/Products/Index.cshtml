@model IEnumerable<JFGM20250320.AppWebMVC.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header bg-white">

        <h1 class="text-center">Buscar productos</h1>
        <form asp-action="Index">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input type="text" name="ProductName" class="form-control" />
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label class="control-label">Descripcion</label>
                        <textarea name="Description" class="form-control"></textarea>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label class="control-label">Bodega</label>
                        <select name="warehouseId" class="form-control" asp-items="ViewBag.WarehouseId "></select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="control-label">Marca</label>
                        <select name="brandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                    </div>
                </div>

            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Crear">Ir a crear</a>
                </div>
            </div>
        </form>

    </div>

    <div class="card-body">

        <p>
            <a asp-action="Create" class="btn btn-outline-success">Crear nuevo Producto</a>
        </p>
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Brand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Warehouse)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand.BrandName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Warehouse.WarehouseName)
                        </td>
                        <td>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ProductId"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.ProductId"><i class="bi bi-card-text"></i></a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ProductId"><i class="bi bi-archive"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
@section Scripts {
    <script>
               $(document).ready(function() {
             $('#myTable').DataTable({
               "language":languageTable
             });
        });

    </script>
}